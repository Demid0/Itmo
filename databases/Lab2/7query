--ВСТАВИТЬ В ТРЕТЬЮ ЛАБУ
SELECT DISTINCT ТРОЕЧНИКИ.ЧЛВК_ИД, CONCAT(Н_ЛЮДИ.ФАМИЛИЯ, ' ', Н_ЛЮДИ.ИМЯ, ' ', Н_ЛЮДИ.ОТЧЕСТВО)
FROM ( 
    SELECT DISTINCT ЧЛВК_ИД FROM Н_ВЕДОМОСТИ
    WHERE ОЦЕНКА = '3'
    ) AS ТРОЕЧНИКИ 
JOIN Н_ЛЮДИ ON Н_ЛЮДИ.ИД = ТРОЕЧНИКИ.ЧЛВК_ИД
JOIN Н_УЧЕНИКИ ON Н_УЧЕНИКИ.ЧЛВК_ИД = Н_ЛЮДИ.ИД
JOIN Н_ПЛАНЫ ON Н_ПЛАНЫ.ИД = Н_УЧЕНИКИ.ПЛАН_ИД
JOIN Н_ОТДЕЛЫ ON Н_ОТДЕЛЫ.ИД = Н_ПЛАНЫ.ОТД_ИД
WHERE Н_ОТДЕЛЫ.КОРОТКОЕ_ИМЯ = 'КТиУ';
